<h1>Make new person!</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@person) do |f| %>

      <%= f.label :p_name %>
      <%= f.text_field :p_name %>

      <%= f.label :character %>
      <%= f.text_field :character %>

      <%= f.submit "Create new person!", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
